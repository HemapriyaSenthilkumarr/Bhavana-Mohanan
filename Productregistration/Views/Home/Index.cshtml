@model Category

<form method="post">
    <div asp-validation-summary = "ModelOnly" class=" text-danger"></div>
    <div class="container-form form-input" style="border:2px">
        <div class="form-group">
            <div class="d-flex h-100">
                <label> Product Name </label>
                <input type="text" name="ProductName" id="ProductName" required>
                <span asp-validation-for="ProductName" class="text-danger"></span>
               
            </div>
        </div> <br />
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <div class="form-group">
            <div class="d-flex h-100">
                <label> Description  </label>
                <input type="text" name="Description" id="Description" required>
                <span asp-validation-for="Description" class="text-danger"></span>
                
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="d-flex h-100">
                <label for="Category">Category</label>
                <Select type="text" name="category" id="category" required>
                    <option value="electronic">Electronics</option>
                    <option value="furniture">Furniture</option>
                    <option value="homeappliences">Home Appliences</option>
                </Select>
            </div>
        </div>
        <br />
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <div class="form-group">
            <div class="d-flex h-100">
                <label>Weight</label>
                <input type="text" name="Weight" id="Weight" required>
                <span asp-validation-for="Weight" class="text-danger"></span>
                
            </div>
        </div>
        <br />
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <div class="form-group">
            <div class="d-flex h-100">
                <label>MRP</label>
                <input type="text" name="MRP" id="MRP" required>
                <span asp-validation-for="MRP" class="text-danger"></span>
               
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="d-flex h-100">
                <label>Discount</label>
                <input type="text" name="Discount" id="Discount" required>
                <span asp-validation-for="Discount" class="text-danger"></span>
                
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="d-flex h-100">
                <label>Final Price</label>
                <input type="text" name="Finalprice" id="Finalprice" required>
                <span asp-validation-for="Finalprice" class="text-danger"></span>
                
            </div>
        </div>
        <br />
        <div class="form-group" >
            <div class="d-flex form-button h-100">
                <button type="submit" class="btn btn-secondary" style="width:100px">Create</button>    
                <button type="reset" onclick="this.form.reset();return false" class="btn btn-secondary" style="width:100px">Cancel</button>
        </div>
    </div>

</div>
    
    
</form>

